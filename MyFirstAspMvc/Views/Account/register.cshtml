@model MyFirstAspMvc.Models.RegisterModel
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
</head>
<body>

    <div class="wrapper">
        <div class="title">Registration</div>
        <form method="post" action="@Url.Action("Register","Account")">

            @if (Model != null && Model.IsError)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message
                </div>
            }

            <div>
                <div class="field">
                    <input value="@(Model != null ? Model.Name : "")" name="name" id="name" type="text" placeholder="Enter your name">
                </div>
                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
            </div>

            <div>
                <div class="field">
                    <input value="@(Model != null ? Model.Email : "")" name="email" id="email" type="email" placeholder="Enter your email">
                </div>
                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
            </div>

            <div>
                <div class="field">
                    <input name="password" id="password" type="password" placeholder="Enter your password">
                </div>
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
            </div>

            <div>
                <div class="field">
                    <input name="confimpassword" id="confirmpassword" type="password" placeholder="Confirm your password">
                </div>
                @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "text-danger" })
            </div>


            <div class="field">
                <input type="submit" value="Register">
            </div>

            <div class="signup-link">
                <a href="@Url.Action("Login", "Account")">Connexion</a>
            </div>

            <div class="signup-link">
                <a href="@Url.Action("Contrat", "Account")">term and contrat</a>
            </div>

        </form>
    </div>

    <script src="@Url.Content("~/Script/jquery-3.6.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Script/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Script/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Script/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</body>
</html>