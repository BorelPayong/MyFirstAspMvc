@{
    ViewBag.Title = "Login";
}
@model LoginModel

        <div class="title">Connexion</div>

        <form method="post" action="@Url.Action("Login", "Account")">

            @Html.HiddenFor(x=> x.ReturnUrl)

            @if (Model != null && Model.IsError)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.Message
                </div>
            }


            <div class="field">
                <input value="@(Model != null ? Model.Email : "")" name="email" id="email" type="text" placeholder="Enter your email" required>
            </div>


            <div class="field">
                <input name="password" id="password" type="password" placeholder="Enter your password" required>
            </div>

            <div class="content">
                <div class="checkbox">
                    <input type="checkbox" id="remember-me">
                    <label for="remember-me">Remember-me</label>
                </div>

                <div class="pass-link">
                    <a href="@Url.Action("RecupereMotDePasse", "Account", new { email = Model != null ? Model.Email : ""})">Forget Password?</a>
                </div>
            </div>

            <div class="field">
                <input type="submit" value="Connexion">
            </div>

            <div class="signup-link">
                No account? <a href="@Url.Action("Register", "Account")">Registration</a>
            </div>

        </form>